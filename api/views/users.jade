extend layouts/default

block content

	.container-fluid   
		include includes/navbar
		.container
			h1 List of users
			if users
				each user in users
					li #{user.firstName} #{user.lastName}
					li #{user.usertype}
					form(role="form" action="/chat2/{user*}" method="POST")
						if user.id !== myid
							input.btn.btn-default(type="submit" name="#{user.id}" value="Chat with #{user.firstName}")
						hr