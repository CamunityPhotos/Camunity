extend layout

block content

	.container
		.row.login
			.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title
				.account-wall
					h1.text-center.CaMunity CaMunity

					form(action="/facebook", method="GET")
						input.btn.btn-facebook.btn-lg.raised(type="submit", value="Facebook")
					form(action="/google", method="GET")
						input.btn.btn-google.btn-lg.raised(type="submit", value="Google")

					form.form-signin(action='login', method='POST')
						input.form-control(type='text', placeholder='First Name', required='', autofocus='')
						input.form-control(type='text', placeholder='Surname', required='', autofocus='')
						input.form-control(type='text', placeholder='Email', required='', autofocus='')
						input.form-control(type='password', placeholder='Password', required='')
						button.btn.btn-lg.btn-primary.btn-block(type='submit', value='login')
