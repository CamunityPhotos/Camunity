extend layout

block content
	.container
		h1.CaMunity CaMunity
		form.form-horizontal(role="form" action="/newjob/step1" method="POST")
			.form-group.one
				label.control-label.col-sm-2(for="postingAs") Posting as:
				.col-sm-4
					select.form-control(name='postingAs')
						option(value='LSE Business Society') LSE Business Society
						option(value='Personal') Personal
						option(value='Company') Company
						option(value='Business') Business
			.form-group.one
				label.control-label.col-sm-2(for="eventName") Name of Event:
				.col-sm-10
					input.form-control(name='eventName' type="text")
			.form-group.one
				label.control-label.col-sm-2(for="dateTime") Date and Time:
				.col-sm-10
					input.form-control(name="dateTime" type="text")
			.form-group.one
				label.control-label.col-sm-2(for="jobDuration") Job Duration:
				.col-sm-10
					input.form-control(name="jobDuration" type="text")
			.form-group.one
				label.control-label.col-sm-2(for="location") Location:
				.col-sm-10
					input.form-control(name="location" type="text")
			.form-group.one
				label.control-label.col-sm-2(for="description") Description:
				.col-sm-10
					textarea.form-control(name="description" type="text")
			
			.form-group.two
				label.control-label.col-sm-2(for="useOfPhotos") Use of Photos:
				.col-sm-10
					label.checkbox-inline
						input(type="checkbox" value="Facebook" name="useOfPhotos")
						|Facebook
					label.checkbox-inline
						input(type="checkbox" value="Printing" name="useOfPhotos")
						|Printing
					label.checkbox-inline
						input(type="checkbox" value="Website" name="useOfPhotos")
						|Website
			.form-group.two
				label.control-label.col-sm-2(for="watermarking") Watermarking (Optionial):
				.col-sm-10
					.watermark Upload a .PNG hi-res copy of your logo
					button.btn.btn-primary(type="submit") Upload
					.watermark Prefered watermark location
					.box
			.form-group.two
				label.control-label.col-sm-2(for="dateRequired") Date of photos required:
				.col-sm-10
					label.checkbox-inline
						input(type="checkbox" value="Urgent" name="dateRequired")
						|Urgent (1-2 Days - addtional fee)
					label.checkbox-inline
						input(type="checkbox" value="Standard" name="dateRequired")
						|Standard (1-2 Weeks)
			.form-group.two
				label.control-label.col-sm-2(for="noOfPhotographers") No. of Photographers needed:
				.col-sm-1
					select.form-control(name='noOfPhotographers')
						option(value='1') 1
						option(value='2') 2
						option(value='3') 3
						option(value='4+') 4 or more
			.form-group.two
				input.btn.btn-primary(type="submit", value="Submit")