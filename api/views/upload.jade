extend layout

block content

	.container-fluid
		include navbar
		.container
			.col-md-12
				h3 Upload an image to your photo gallery
				br
			.col-md-6
				input(type="file" id="file_input")
				p(id="status") Please select a file

				form(method="POST" action="/submit_form")
					input(type="hidden" id="photo_url" name="photo_url")
					input(type="text" id="title" name="title" placeholder="Enter a title" size="40")
					br
					br
					input(type="submit" value="Upload your photo")
			.col-md-6
				img(id="preview" src="")
	script.
		(function() {
		    document.getElementById("file_input").onchange = function(){
		        var files = document.getElementById("file_input").files;
		        var file = files[0];
		        if(file == null){
		            alert("No file selected.");
		        }
		        else if(file.size > 10000000) {
		        	alert("File size larger than 10mb, please upload a smaller file.");

		        } else if(file.type !== "image/png" && file.type !== "image/jpeg") {
		        	alert("Please upload either a jpeg or png file.");

		        } else {
		            get_signed_request(file);
		        }

		    };
		})();
		function get_signed_request(file){
		    var xhr = new XMLHttpRequest();
		    xhr.open("GET", "/sign_s3?file_name="+file.name+"&file_size="+file.size+"&file_type="+file.type);
		    xhr.onreadystatechange = function(){
		        if(xhr.readyState === 4){
		            if(xhr.status === 200){
		                var response = JSON.parse(xhr.responseText);
		                upload_file(file, response.signed_request, response.url);
		            }
		            else{
		                alert("Could not get signed URL.");
		            }
		        }
		    };
		    xhr.send();
		}
		function upload_file(file, signed_request, url){
		    var xhr = new XMLHttpRequest();
		    xhr.open("PUT", signed_request);
		    xhr.setRequestHeader('x-amz-acl', 'public-read');
		    xhr.onload = function() {
		        if (xhr.status === 200) {
		            document.getElementById("preview").src = url;
		            document.getElementById("photo_url").value = url;
		        }
		    };
		    xhr.onerror = function() {
		        alert("Could not upload file.");
		    };	
		    xhr.send(file);
		}