extend layout

block content

	.container-fluid   
		include navbar
		.container
			.col-md-12
				h1 Profile
				br
			.col-md-6.details
				p Displayname: #{profile.displayName}
				p First Name: #{profile.firstName}
				p Last Name: #{profile.lastName}
				p Email: #{profile.email}
				p Gender: #{profile.gender}
				p Social: 
					a(href="#{profile.link}" method="POST") #{profile.auth}
			.col-md-6.profilepicture 
				img(src="#{profile.picture}" height="200" width="200")
			.col-md-12
				h3 Photo Gallery
				br
				if photos
					each photo in photos
						.photos.col-md-4
							img(src="#{photo.url}" class="photo_img")
							br
							h5 #{photo.title}
				else
					a(href="/upload") Upload your first photo